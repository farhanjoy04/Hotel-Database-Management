CREATE TABLE Bill (
    Bill_ID NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY,
    Invoice_ID NUMBER NOT NULL, -- Weak Entity dependent on Invoice
    Bill_Date DATE NOT NULL,
    Amount_Due NUMBER(10,2) NOT NULL,
    Due_Date DATE NOT NULL,
    Payment_Status VARCHAR2(20) CHECK (Payment_Status IN ('Paid', 'Unpaid')),
    CONSTRAINT pk_bill PRIMARY KEY (Bill_ID),
    CONSTRAINT fk_bill_invoice FOREIGN KEY (Invoice_ID) REFERENCES Invoice(Invoice_ID) ON DELETE CASCADE
);
